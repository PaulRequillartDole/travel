<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <title>{% block title %}Travel.{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {#        <link rel="stylesheet" href="https://preview.tabler.io/dist/css/tabler.min.css">#}
        <script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta11/dist/js/tabler.min.js"></script>
    {% endblock %}
</head>
<body class="border-top-wide border-primary d-flex flex-column theme-light">
<div class="page page-center">
    <div class="container-tight py-4">
        <div class="text-center mb-4">
            <a href="." class="navbar-brand navbar-brand-autodark">
                <h2>
                    Travel.
                </h2>
            </a>
        </div>
        {{ form_start(registrationForm, {'attr' : {'class' : 'card card-md'}}) }}
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Create new account</h2>
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-indigo w-100">Register</button>
        </div>
        {{ form_end(registrationForm) }}
        <div class="text-center text-muted mt-3">
            Already have account? <a href="{{ path('app_login') }}" tabindex="-1">Sign in</a>
        </div>
    </div>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {#    <script src="https://preview.tabler.io/dist/js/demo.min.js"></script>#}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta11/dist/css/tabler.min.css">

