{% extends 'base.html.twig' %}

{% block title %}Icon index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between mb-3">
        <h1 class="mb-0">Icon</h1>
        <a class="btn btn-primary" href="{{ path('app_icon_new') }}">Create new</a>
    </div>

    <div class="d-flex gap-3">
        {% for icon in icons %}
            <a href="{{ path('app_icon_edit', {'id': icon.id}) }}">
                <span class="avatar avatar-lg rounded-3">
                    {{ icon.label|raw }}
                </span>
            </a>
        {% endfor %}
    </div>

{% endblock %}
