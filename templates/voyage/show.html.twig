{% extends 'base.html.twig' %}

{% block title %}Voyage{% endblock %}

{% block body %}
    <div class="container" data-controller="modal">
        <div class="mx-auto" style="max-width: 1000px; width: 100%">
            <div style="max-height: 200px; overflow: hidden;" class="text-center">
                {% if voyage.image %}
                    <img style="max-width: 100%;" class="rounded" src="{{ voyage.image }}" alt="">
                {% endif %}
            </div>
            <div class="mx-1 mx-md-3" {% if voyage.image %} style="margin-top: -3rem !important;" {% endif %}>
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h1 class="mb-0">Voyage to {{ voyage.destination }}</h1>
                            <div class="d-flex align-items-center">
                                <div class="dropdown">
                                    <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Add
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item"
                                               data-action="modal#showModal"
                                               data-modal-url-param="{{ path('app_note_new', {'id': voyage.id}) }}"
                                            >
                                                Note
                                            </a>
                                        </li>
                                        <li><a class="dropdown-item" href="#">Place to visit</a></li>
                                        <li><a class="dropdown-item" href="#">Restaurant</a></li>
                                    </ul>
                                </div>
                                {% if is_granted('VOYAGE_EDIT', voyage) %}
                                    <div class="dropdown">
                                        <button class="btn px-2" type="button" data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                 class="icon icon-tabler icon-tabler-dots-vertical mx-0 px-0" width="24"
                                                 height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                                 fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <circle cx="12" cy="12" r="1"></circle>
                                                <circle cx="12" cy="19" r="1"></circle>
                                                <circle cx="12" cy="5" r="1"></circle>
                                            </svg>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#">

                                                    {{ include('voyage/_delete_form.html.twig') }}
                                                </a></li>
                                            <li><a class="dropdown-item"
                                                   href="{{ path('app_voyage_edit', {'id': voyage.id}) }}">
                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                         class="icon icon-tabler icon-tabler-edit me-2" width="24"
                                                         height="24" viewBox="0 0 24 24" stroke-width="2"
                                                         stroke="currentColor" fill="none" stroke-linecap="round"
                                                         stroke-linejoin="round">
                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                        <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path>
                                                        <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path>
                                                        <path d="M16 5l3 3"></path>
                                                    </svg>
                                                    Edit
                                                </a></li>
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        {% if voyage.description %}
                            <div class="text-muted">
                                {{ voyage.description }}
                            </div>
                        {% endif %}
                        {% if voyage.startAt is not null and voyage.endAt is not null %}
                            <div class="text-muted">
                                {{ voyage.duration }} days -
                                from <b>{{ voyage.startAt|date('d/m/Y') }}</b> to
                                <b>{{ voyage.endAt|date('d/m/Y') }}</b>
                            </div>
                        {% endif %}
                        <div class="avatar-list mt-2">
                            <span class="avatar avatar-sm">{{ voyage.owner.userIdentifier|slice(0, 2) }}</span>
                            {% for user in voyage.users %}
                                <span class="avatar avatar-sm">{{ user.userIdentifier|slice(0, 2) }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {% if voyage.notes|length > 0 %}
                    <div class="my-3">
                        <h3>Notes</h3>
                        <div class="list-group">
                            {% for note in voyage.notes %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <a href="#"
                                           data-action="modal#showModal"
                                           data-modal-url-param="{{ path('app_note_show', {'id': note.id}) }}"
                                        >
                                            {{ note.title }}
                                        </a>
                                        <div>
                                            <a  href="#"
                                               data-action="modal#showModal"
                                               data-modal-url-param="{{ path('app_note_edit', {'id': note.id}) }}"
                                                class="text-primary text-decoration-none"
                                            >
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1"></path>
                                                    <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z"></path>
                                                    <path d="M16 5l3 3"></path>
                                                </svg>
                                            </a>
                                            <a href="#"
                                               data-action="modal#showModal"
                                               data-modal-url-param="{{ path('app_note_show_delete', {'id': note.id}) }}"
                                               class="text-danger"
                                            >
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <line x1="4" y1="7" x2="20" y2="7"></line>
                                                    <line x1="10" y1="11" x2="10" y2="17"></line>
                                                    <line x1="14" y1="11" x2="14" y2="17"></line>
                                                    <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12"></path>
                                                    <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3"></path>
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="text-muted">
                                        <style>
                                            div[data-controller="mdviewer"] > .toastui-editor-contents > *{
                                                color: #6c757d !important;
                                            }
                                        </style>
                                        <div data-controller="mdviewer" data-value="{{ note.content }}"></div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
        {{ include('_modal.html.twig') }}
    </div>
{% endblock %}
