<div class="my-3 card" id="sections">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">
            {% if section.icon is not null %}
                {{ section.icon.label|raw }}
            {% endif %}
            {{ section.title }}
        </h3>
        <div class="d-flex">
            {{ include('section/_action_menu.html.twig') }}
        </div>
    </div>
    <div class="list-group list-group-flush list-group-hoverable">
        {% for item in section.items %}
            <div class="list-group-item">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>

                        <a href="#"
                           data-action="modal#showModal"
                           data-modal-url-param="{{ path('app_item_show', {'id': item.id}) }}"
                           data-modal-size-param="modal-xl"
                        >
                            {{ item.title }}
                        </a>
                        {% if item.content is not null and item.content != "" %}
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-notes text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                <rect x="5" y="3" width="14" height="18" rx="2"></rect>
                                <line x1="9" y1="7" x2="15" y2="7"></line>
                                <line x1="9" y1="11" x2="15" y2="11"></line>
                                <line x1="9" y1="15" x2="13" y2="15"></line>
                            </svg>
                        {% endif %}
                    </div>
                    <div>
                        {{ include('item/_action_menu.html.twig') }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>